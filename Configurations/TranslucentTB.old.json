// Mode
// Regular
// Maximised window
// Start Menu opened
// Cortana/Search opened
// Timeline opened
//
// Light
// Flent	0xE4E4E4DA
// Flent	0xE4E4E4DA
// Clear	0xF2F2F2CB
// Flent	0xEDEDEDFF
// Clear	0x00000066
//
// Dark
// Flent	0x242424DA
// Flent	0x242424DA
// Clear	0x2A2A2A99
// Flent	0x242424DA
// Clear	0x00000066
//
// Color
// Flent	0x??????CC (off Transparency effects in Settings and get background color of action center)
// Opaque	0x??????FF (get color of the window's title bar)
// Clear	0x00000099
// Flent	(inherit)
// Clear	0x00000066

{
  "$schema": "https://sylveon.dev/TranslucentTB/schema",
  "desktop_appearance": {
    "accent": "acrylic",
    "color": "#E4E4E4DA",
    "show_peek": true,
    "show_line": false
  },
  "visible_window_appearance": {
    "enabled": false,
    "accent": "clear",
    "color": "#00000000",
    "show_peek": true,
    "show_line": false,
    "rules": {
      "window_class": {},
      "window_title": {},
      "process_name": {}
    }
  },
  "maximized_window_appearance": {
    "enabled": true,
    "accent": "acrylic",
    "color": "#E4E4E4DA",
    "show_peek": true,
    "show_line": true,
    "rules": {
      "window_class": {},
      "window_title": {},
      "process_name": {}
    }
  },
  "start_opened_appearance": {
    "enabled": true,
    "accent": "clear",
    "color": "#F2F2F2CB",
    "show_peek": true,
    "show_line": true
  },
  "search_opened_appearance": {
    "enabled": true,
    "accent": "clear",
    "color": "#EDEDEDFF",
    "show_peek": true,
    "show_line": true
  },
  "task_view_opened_appearance": {
    "enabled": true,
    "accent": "clear",
    "color": "#00000067",
    "show_peek": true,
    "show_line": true
  },
  "battery_saver_appearance": {
    "enabled": false,
    "accent": "opaque",
    "color": "#00000000",
    "show_peek": true,
    "show_line": false
  },
  "ignored_windows": {
    "window_class": [],
    "window_title": [],
    "process_name": []
  },
  "hide_tray": false,
  "disable_saving": false,
  "verbosity": "warn"
}